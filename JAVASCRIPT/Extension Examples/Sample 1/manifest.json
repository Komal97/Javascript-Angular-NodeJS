{
    "manifest_version": 2,
    "name": "Code train",
    "version": "1.0",
    "content_scripts": [{
        "matches": ["<all_urls>"],
        "js": ["content.js"]
    }],

    "permissions": ["tabs"],

    "background": {
        "scripts": ["background.js"]
    },

    "browser_action": {
        "default_icon": "hello_extensions.png",
        "default_popup": "popup.html",
        "default_title": "A tooltip"
    }
}